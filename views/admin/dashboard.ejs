<style>
  .hide {
    display: none;
  }
</style>

<div>
  <a class="btn-admin"><h3 id="registerHeading">Register New Admin</h3></a>
  <form id="registerForm" action="/register" method="POST" class="hide">
    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username">
    <label for="password"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password">
    <div class="btn-container">
      <input type="submit" value="Register" class="btn">
    </div>
  </form>
</div>

<a href="/student-list" class="btn-admin">
  <h3>View/Add/Update Students</h3>
</a>

<div class="admin-title">
  <h2>Tutors</h2>
  <a href="/add-tutor" class="button">+ Add New</a>
</div>

<table class="admin-tutors">
  <thead>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th>Tag</th>
      <th>Inst</th>
      <th>Dept</th>
      <th>HSC</th>
      <th>Back</th>
      <th>College</th>
      <th>Exp</th>
      <th>Mode</th>
      <th>Pref</th>
      <th>Rate</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach(tutor=> { %>
      <tr>
        <td>
          <%= tutor.name %>
        </td>
        <td>
          <%= tutor.id %>
        </td>
        <td>
          <%= tutor.tag %>
        </td>
        <td>
          <a href="<%= tutor.fb %>" style="text-decoration: none;">â“•</a>
          <a href="tel:<%= tutor.phone %>" style="text-decoration: none;">ðŸ“ž</a> 
        </td>
        <td>
          <%= tutor.institution %>
        </td>
        <td>
          <%= tutor.dept %>
        </td>
        <td>
          <%= tutor.hsc %>
        </td>
        <td>
          <%= tutor.background %>
        </td>
        <td>
          <%= tutor.college %>
        </td>
        <td>
          <%= tutor.expertise %>
        </td>
        <td>
          <%= tutor.mode %>
        </td>
        <td>
          <%= tutor.pref %>
        </td>
        <td>
          <%= tutor.rating %>
        </td>
        <td>
          <div style="display: flex; gap: 5px;">
            <form action="/delete-tutor/<%= tutor._id %>?_method=DELETE" method="POST" style="margin: 0;">
              <input type="submit" value="+" class="">
            </form>
            <form action="/delete-tutor/<%= tutor._id %>?_method=DELETE" method="POST" style="margin: 0;">
              <input type="submit" value="-" class="">
            </form>
          </div>
          <form action="/delete-tutor/<%= tutor._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Del" class="btn-delete btn" style="display: block; margin-top: 5px;">
          </form>
        </td>        
      </tr>
      <% }) %>
  </tbody>
</table>


<script>
  // Get the heading element
  const registerHeading = document.getElementById('registerHeading');
  // Get the form element
  const registerForm = document.getElementById('registerForm');

  // Add click event listener to the heading element
  registerHeading.addEventListener('click', function () {
    // Toggle the 'hide' class on the form element
    registerForm.classList.toggle('hide');
  });
</script>